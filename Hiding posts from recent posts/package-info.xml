<?xml version="1.0"?><!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info"><package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">	<id>sid2varun:hide_recent</id>	<name>Recent Post Settings</name>	<version>1.3</version>	<type>modification</type>	<install for="2.0 - 2.0.99">		<readme type="file" parsebbc="true">readme.txt</readme>		<modification format="xml" type="file">Modification.xml</modification>		<require-file name="HideTopicHooks.php" destination="$sourcedir" />        <require-file name="HideTopic.php" destination="$sourcedir" />		<code>install.php</code>		<redirect url="?action=admin;area=modsettings;sa=hide" />	</install>	<uninstall for="2.0 - 2.0.99">		<modification type="file" reverse="true">Modification.xml</modification>		<remove-file name="$sourcedir/HideTopicHooks.php" />        <remove-file name="$sourcedir/HideTopic.php" />		<redirect url="$scripturl?action=admin;area=packages;sa=browse" timeout="1000" />		<code>uninstall.php</code>	</uninstall></package-info>